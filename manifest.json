{
  "manifest_version": 3,
  "name": "Junting Orbit",
  "short_name": "JuntingOrbit",
  "version": "1.0.0",
  "description": "Analyze job listings, track applications, and generate AI cover letters without leaving the job board.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.seek.com/*",
    "https://*.seek.com.au/*",
    "https://*.seek.co.nz/*",
    "https://junting-orbit-server.vercel.app/*"
  ],
  "action": {
    "default_title": "Open Junting Orbit",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.seek.com/*",
        "https://*.seek.com.au/*",
        "https://*.seek.co.nz/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.seek.com/*",
        "https://*.seek.com.au/*",
        "https://*.seek.co.nz/*"
      ],
      "js": ["applicationTracker.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.seek.com/*",
        "https://*.seek.com.au/*",
        "https://*.seek.co.nz/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
